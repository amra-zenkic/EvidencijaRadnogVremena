<!DOCTYPE html>
<html>
  <head>
    <title>Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel='stylesheet' href='/stylesheets/navigacija.css' />
    <link rel='stylesheet' href='/stylesheets/admin.css' />
  </head>
  <body>
  <%- include('navigacija', { radnoMjestoID: radnoMjestoID }) %>

  <div class="container mt-5">

    <div class="row">
      <div class="col-sm-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><i class="fa fa-address-card-o"></i> Broj zaposlenik radnika ukupno</h5>
            <p class="card-text"><%=brojRadnika%> Trenutno zaposlenih na raznim pozicijama</p>
            <a href="/admin/svi-korisnici" class="btn dugme">Pogledaj sve zaposlene</a>
          </div>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><i class="fa fa-briefcase"></i> Broj radnika sa statusom menadžera</h5>
            <p class="card-text"><%=brojMenadzera%> Trenutno zaposlenih na poziciji menadžera</p>
            <a href="/admin/svi-menadzeri" class="btn dugme">Pogledaj sve menadžere</a>
          </div>
        </div>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-sm-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><i class="fa fa-sitemap"></i> Broj projekata u izradi</h5>
            <p class="card-text"><%=brojNezavrsenihProjekata%> Trenutno aktivnih projekata</p>
            <a href="/aktivni-projekti" class="btn dugme">Pogledaj sve aktivne projekte</a>
          </div>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><i class="	fa fa-check-square-o"></i> Broj završenih projekata</h5>
            <p class="card-text"><%=brojZavrsenihProjekata%> Ukupno završenih projekata</p>
            <a href="/zavrseni-projekti" class="btn dugme">Pogledaj sve završene projekte</a>
          </div>
        </div>
      </div>
    </div>
    <div class="mt-3">
      <h2>Aktivni timovi</h2>
      <ol class="list-group list-group-numbered">
        <%timovi.forEach(tim => {%>
        <li class="list-group-item"><%= tim.naziv_tima%></li>
        <%})%>
      </ol>
    </div>
  </div>

  </body>
</html>
