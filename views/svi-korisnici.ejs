<!DOCTYPE html>
<html>
  <head>
    <title>Lista svih korisnika</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel='stylesheet' href='/stylesheets/navigacija.css' />
    <link rel='stylesheet' href='/stylesheets/admin.css' />
  </head>
  <body>
  <%- include('navigacija', { radnoMjestoID: radnoMjestoID }) %>

  <div class="container py-5 px-3">
    <h1>Lista svih radnika</h1>
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>Ime</th>
          <th>Prezime</th>
          <th>Email</th>
          <th>Radno mjesto</th>
          <th>Nadređeni</th>
          <th>Nadređeni email</th>
          <th>Uredi</th>
          <th>Izbriši</th>
          <th>Produktivnost</th>
        </tr>
        </thead>
        <%for(let i = 0; i<podaci.length; i++) {%>
          <tr>
            <td><%= podaci[i].name %></td>
            <td><%= podaci[i].surname %></td>
            <td><%= podaci[i].email %></td>
            <td><%= podaci[i].naziv_radnog_mjesta %></td>
            <td><%= podaci[i].nadredjeni %></td>
            <td><%= podaci[i].nadredjeni_email %></td>
            <td><button type="button" class="btn btn-basic" onclick="uredi(<%=podaci[i].id%>)">Uredi</button></td>
            <td><button type="button" class="btn btn-danger" onclick="brisi(<%=podaci[i].id%>)">Izbriši</button></td>
            <td><button type="button" class="btn btn-outline-dark" onclick="produktivnost(<%=podaci[i].id%>)">Produktivnost</button></td>
          </tr>
        <%}%>
      </table>
    </div>
  </div>

  <script>
    function uredi(id) {
      window.location = `/admin/uredi-korisnika/${id}`
    }
    function brisi(id) {
      var txt
      if (confirm("Da li ste sigurni da želite izbrisati korisnika")) {
        window.location = `/admin/brisi-korisnika/${id}`
      } else {

      }
    }
    function produktivnost(id) {
      window.location = `/admin/produktivnost-korisnika/${id}`
    }
  </script>

  </body>
</html>
