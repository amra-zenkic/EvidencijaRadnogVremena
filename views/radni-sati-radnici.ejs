<!DOCTYPE html>
<html>
  <head>
    <title>Radni sati</title>
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel='stylesheet' href='/stylesheets/navigacija.css' />
    <link rel='stylesheet' href='/stylesheets/admin.css' />
  </head>
  <body>
  <%- include('navigacija', { radnoMjestoID: radnoMjestoID }) %>

  <div class="container mt-5">

      <h1>Odaberite radnika</h1>
      <form action="/radni-sati-po-ovom-radniku" method="get">
          <div class="mb-3 mt-3">
              <label for="radnik" class="form-label">Odaberi radnika</label>
              <select class="form-select" name="radnik" id="radnik">
                  <%podaci.forEach(podatak => {%>
                      <option value="<%=podatak.id%>"><%=podatak.ime_i_prezime_radnika%></option>
                  <%})%>
              </select>
          </div>
          <button type="submit" class="btn btn-secondary mt-3">Pogledaj</button>
      </form>

  </div>

  </body>
</html>
