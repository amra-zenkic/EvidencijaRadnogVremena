<!DOCTYPE html>
<html>
  <head>
    <title>Signup</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel='stylesheet' href='/stylesheets/navigacija.css' />
    <link rel='stylesheet' href='/stylesheets/admin.css' />
  </head>
  <body>
  <%- include('navigacija', { radnoMjestoID: radnoMjestoID }) %>

  <div class="container py-5 px-3">
    <h1>Dodaj novog korisnika</h1>

    <ul>
      <%if(typeof errors != 'undefined') {%>
        <% errors.forEach(error=>{%>
          <li> <%= error.message%> </li>
      <%})}%>
      <%if(typeof  uspjeh != 'undefined') {%>
        <% uspjeh.forEach(usp=>{%>
          <li> <%= usp %> </li>
      <%})}%>
    </ul>
    <form action="/admin/dodaj-novog-korisnika/dodaj" method="post">
      <div class="mb-3 mt-3">
        <label for="name">Ime:</label>
        <input type="text" class="form-control" id="name" placeholder="Enter name" name="name" required>
      </div>
      <div class="mb-3 mt-3">
        <label for="surname">Prezime:</label>
        <input type="text" class="form-control" id="surname" placeholder="Enter surname" name="surname" required>
      </div>

      <div class="mb-3 mt-3">
        <label for="email">Email:</label>
        <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" required>
      </div>
      <div class="mb-3">
        <label for="password">Password:</label>
        <input type="password" class="form-control" id="password" placeholder="Enter password" name="password" required>
      </div>
      <div class="mb-3">
        <label for="password2">Confirm password:</label>
        <input type="password" class="form-control" id="password2" placeholder="Confirm password" name="password2" required>
      </div>
      <div class="mb-3">
        <label for="radno_mjesto">Odaberi radno mjesto</label>
        <select class="form-select" id="radno_mjesto" name="radno_mjesto">
          <%radnaMjesta.forEach(radnoMjesto => {%>
            <option><%= radnoMjesto.naziv_radnog_mjesta %></option>
          <%})%>
        </select>
      </div>
      <div class="mb-3">
        <label for="nadredjeni">Dodaj nadreÄ‘enog</label>
        <select class="form-select" id="nadredjeni" name="nadredjeni">
          <option></option>
          <%sviNadredjeni.forEach(sviNadredjen => {%>
          <option><%=sviNadredjen.email%></option>
          <%})%>
        </select>
      </div>

      <button type="submit" class="btn btn-primary">Dodaj novog korisnika</button>
      <!-- <button class="btn btn-primary" onclick="<%= () => { window.location = `/admin/`}%>">Odustani</button> -->
      <br>
    </form>
  </div>
  </body>
</html>
